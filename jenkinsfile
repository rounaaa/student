pipeline {
    agent any

    tools {
        maven 'maven'       // Nom configur√© dans Jenkins (Global Tool Configuration)
        jdk 'jdk17'          // Idem pour JDK
    }

    stages {

        stage('Clone repository') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/rounaaa/student.git'
            }
        }
         stage('Build') {
            steps {
                sh 'mvn -B clean package'
            }
        }
}
}
